<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/root_layout"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@drawable/capture">
		<com.cs442.team_2.sudoku.SudokuBoardView
				android:id="@+id/sudoku_board"
				android:layout_width="360dp"
				android:layout_height="wrap_content"
				android:keepScreenOn="true"
				android:layout_centerVertical="true"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				/>
		<com.cs442.team_2.sudoku.Numpad
				android:id="@+id/input_methods"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_toRightOf="@+id/sudoku_board"
				android:layout_toEndOf="@+id/sudoku_board"/>
